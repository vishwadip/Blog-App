
<h1>Edit An Article</h1>
<% if @article.errors.any? %>
    <ul>
    <%@article.errors.full_messages.each do |e| %>
    <li><%=e%></li> 
    <%end%>
    </ul>
<%end%>


<!-- here we are using model - as we want to field to be prefilled with data
local true is using normal html to send request
-->
<%= form_with(model: @article, local:true) do |f|%>
    <p>
    <%= f.label :Title%>
    <%= f.text_field :title%>
    </p>

    <p>
    <%= f.label :Description%>
    <%= f.text_area :description%>
    </p>
    <p>
    <%= f.submit%>
    </p>
<%end%>