
<h1>Create A New Article</h1>
<% if @article.errors.any? %>
    <ul>
    <%@article.errors.full_messages.each do |e| %>
    <li><%=e%></li> 
    <%end%>
    </ul>
<%end%>


<!-- below form_scope is form builder from rails , 
scope is the model name
local true is using normal html to send request
-->
<%= form_with scope: :article, url:articles_path,local:true do |f|%>
    <p>
    <%= f.label :Title%>
    <%= f.text_field :title%>
    </p>

    <p>
    <%= f.label :Description%>
    <%= f.text_area :description%>
    </p>
    <p>
    <%= f.submit%>
    </p>
<%end%>